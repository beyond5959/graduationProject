{{> nav}}
<div ng-controller="mflowCtrl">
    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        管理台 > 财务流水
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>类型</th>
                                <th>金额</th>
                                <th>项目</th>
                                <th>时间</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each flows}}
                                <tr class="{{color}}" >
                                    <td>{{index}}</td>
                                    <td>{{type}}</td>
                                    <td>{{price}}</td>
                                    <td>{{content}}</td>
                                    <td>{{time}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


</div>
{{#section 'foot'}}
    <script src="/js/m_flow.js"></script>
{{/section}}
